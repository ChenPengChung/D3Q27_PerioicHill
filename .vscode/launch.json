{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "MinGW (Strawberry) - Build & Debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}\\main.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        { "name": "PATH", "value": "C:\\Strawberry\\c\\bin;${env:PATH}" }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "C:\\Strawberry\\c\\bin\\gdb.exe",
      "preLaunchTask": "Build main.exe (MinGW)",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "MinGW - Run Only (No Debug)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}\\main.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        { "name": "PATH", "value": "C:\\Strawberry\\c\\bin;${env:PATH}" }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "C:\\Strawberry\\c\\bin\\gdb.exe"
    }
  ]
}
